        printf("\n\n\n                                               AGUARDE 2 SEGUNDOS                                        \n\n\n");
        printf("                            ========================================================\n");
        
	Sleep(2000);
	
	system("cls");
     }
 
	   


if(login2 == 2)
{
	return(0);
}
}
